  color: #8a786a;
  overflow: hidden;
}

.info-time {
  font-size: 12px;
}

.info-block {
  background-color: #f5f0ec;
  text-align: center;
  width: 120px;
  border-radius: 3px;
  float: left;
  padding: 4px 0;
  
  &.last {
    margin-left: 1px;
  }
  
  dt, dd {
    margin: 0;
